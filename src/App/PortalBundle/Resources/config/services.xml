<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <parameters>
        <parameter key="app_portal.be2bill.class">App\PortalBundle\Services\Be2bill</parameter>
        <parameter key="app_portal.paypal.class">App\PortalBundle\Services\Paypal</parameter>
        <parameter key="app_portal.payment_container_service.class">App\PortalBundle\Services\PaymentContainerService</parameter>
        <parameter key="app_portal.guzzle.exception.class">App\PortalBundle\EventListener\GuzzleExceptionListener</parameter>
    </parameters>
    
    <services>
        <service id="app_portal.be2bill_payment_service"
                 class="%app_portal.be2bill.class%" lazy="true">
            <tag name="app_portal.payment_services"/>
        </service>

        <service id="app_portal.paypal_payment_service_"
                 class="%app_portal.paypal.class%" lazy="true">
            <tag name="app_portal.payment_services"/>
        </service>

        <service id="app_portal.payment_container_service"
                 class="%app_portal.payment_container_service.class%">
        </service>

        <service id="app_portal.guzzle_exception_eventlistener" class="%app_portal.guzzle.exception.class%">
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
            <tag name="kernel.event_listener" event="kernel.terminate" method="onKernelTerminate" />
            <argument type="service" id="app_portal.payment_container_service" />
        </service>
    </services>
</container>
