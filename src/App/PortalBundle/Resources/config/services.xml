<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <parameters>
        <parameter key="app_portal.be2bill.class">App\PortalBundle\Services\Be2bill</parameter>
        <parameter key="app_portal.paypal.class">App\PortalBundle\Services\Paypal</parameter>
        <parameter key="app_portal.payment_container_service.class">App\PortalBundle\Services\PaymentContainerService</parameter>
        <parameter key="app_portal.payment_manager_service.class">App\PortalBundle\Services\PaymentManagerService</parameter>
    </parameters>
    
    <services>
        <service id="app_portal.be2bill_payment_service"
                 class="%app_portal.be2bill.class%" lazy="true">
            <tag name="app_portal.payment_services"/>
        </service>

        <service id="app_portal.paypal_payment_service_"
                 class="%app_portal.paypal.class%" lazy="true">
            <tag name="app_portal.payment_services"/>
        </service>

        <service id="app_portal.payment_container_service"
                 class="%app_portal.payment_container_service.class%">
        </service>

        <service id="app_portal.payment_manager_service"
                 class="%app_portal.payment_manager_service.class%">
            <call method="setPaymentContainerService">
                <argument type="service" id="app_portal.payment_container_service"/>
            </call>
        </service>
    </services>
</container>
