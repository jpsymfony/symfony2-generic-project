<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="app_portal.example_movie_subscriber.class">App\PortalBundle\EventSubscriber\ExampleMovieSubscriber</parameter>
        <parameter key="app_portal.guzzle.exception.class">App\PortalBundle\EventListener\GuzzleExceptionListener</parameter>
    </parameters>

    <services>
        <service id="app_portal.example_movie_subscriber"
                 class="%app_portal.example_movie_subscriber.class%">
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="app_portal.guzzle_exception_eventlistener" class="%app_portal.guzzle.exception.class%">
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
            <tag name="kernel.event_listener" event="kernel.terminate" method="onKernelTerminate" />
            <argument type="service" id="app_portal.payment_container_service" />
        </service>
    </services>
</container>