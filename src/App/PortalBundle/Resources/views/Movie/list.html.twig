{% extends '@AppPortal/layout.html.twig' %}

{% block title %}{{ 'film.liste'|trans }}{% endblock %}

{% block active_movies %}active{% endblock %}

{% block content %}
    {{ render(controller('AppPortalBundle:Movie:formFilter', app.request.get('app_portal_movie_filter', []))) }}
    <div style="text-align: center">
        <h2>Liste des films</h2>
    </div>
    {% include '@AppPortal/Movie/partials/movies.html.twig' with {'movies' : movies}  %}
    {% if is_granted('ROLE_EDITOR') %}
        <p><a href="{{ path('movie_new') }}">{{ 'film.ajouter'|trans }}</a><p>
    {% endif %}
{% endblock %}